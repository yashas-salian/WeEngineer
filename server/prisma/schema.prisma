generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  ID String @id
  username String @unique
  email String @unique
  password String?
  DOB String?
  College String?
  Degree String?
  Field String?
  pdfs Pdf[]
  events Event[]
}

model Pdf{
  pdfID String @id
  userID String
  college_name String
  subject_name String
  pdf_name String
  year String
  Examtype String
  Url String
  secure_Url String
  size Int
  type String
  user User @relation(fields: [userID], references: [ID])
}

model Event{
  id Int @id @default(autoincrement())
  userID String
  title String
  description String
  dueDate DateTime
  type String
  user User @relation(fields: [userID], references: [ID])
}